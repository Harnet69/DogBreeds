<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dog_navigation"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.harnet.dogbreeds.view.ListFragment"
        android:label="listFragment">
        <action
            android:id="@+id/actionDetailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.harnet.dogbreeds.view.DetailFragment"
        android:label="DetailFragment">
        <action
            android:id="@+id/actionListFragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="dogId"
            android:defaultValue="0"
            app:argType="string" />
        <argument
            android:name="dogName"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="dogLifeSpan"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="dogBreedGroup"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="dogBredFor"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="dogTemperament"
            android:defaultValue=""
            app:argType="string" />
        <argument
            android:name="dogImagURL"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>